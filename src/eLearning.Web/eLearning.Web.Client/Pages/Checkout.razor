@page "/checkout/{id:guid}"

@using eLearning.Web.Client.Models
@using eLearning.Web.Client.Services
@inject ICourseService _service
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthProvider

<!-- Promo Section Start -->
   <section class="promo-sec" style="background: url('images/promo-bg.jpg')no-repeat center center / cover;">
      <img src="images/promo-left.png" alt="" class="anim-img">
      <img src="images/promo-right.png" alt="" class="anim-img anim-right">
      <div class="container">
         <div class="row">
            <div class="col-lg-12 text-center">
               <h1 class="display-2 text-white">Checkout</h1>
               <nav aria-label="breadcrumb mt-0">
                  <ol class="breadcrumb">
                     <li class="breadcrumb-item"><a href="/">Home</a></li>
                     <li class="breadcrumb-item active" aria-current="page">Checkout</li>
                  </ol>
               </nav>
            </div>
         </div>
      </div>
   </section>
   <!-- Promo Section End -->

   <!-- Checkout Section Start -->
   <section class="checkout-section sec-padding">
        <div class="container">
            <form class="form checkout-form" @onsubmit="PlaceOrder">
                <div class="row">
                    <div class="col-lg-8 col-sm-12">
                        <h3 class="sub-title">Billing Details:</h3>
                        <div class="checkout-billingform bg-shade border rounded p-lg-5 p-3 mt-5">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label>First name*</label>
                                    <input type="text" @bind="billing.FirstName" class="form-control" required />
                                </div>
                                <div class="col-lg-6">
                                    <label>Last name*</label>
                                    <input type="text" @bind="billing.LastName" class="form-control" required />
                                </div>
                                <div class="col-lg-6">
                                    <label>Country*</label>
                                    <select @bind="billing.Country" class="form-control">
                                        @foreach (var country in countries)
                                        {
                                            <option value="@country">@country</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-6">
                                    <label>Street address *</label>
                                    <input type="text" @bind="billing.Street" class="form-control" required />
                                </div>
                                <div class="col-lg-6">
                                    <label>State</label>
                                    <input type="text" @bind="billing.State" class="form-control" />
                                </div>
                                <div class="col-lg-6">
                                    <label>Postcode</label>
                                    <input type="text" @bind="billing.PostCode" class="form-control" />
                                </div>
                                <div class="col-lg-6">
                                    <label>Phone</label>
                                    <input type="text" @bind="billing.Phone" class="form-control" />
                                </div>
                                <div class="col-lg-6">
                                    <label>Email Address</label>
                                    <input type="email" @bind="billing.Email" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label>Company (Optional)</label>
                                    <input type="text" @bind="billing.Company" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label>Order notes (Optional)</label>
                                    <textarea @bind="billing.Notes" class="form-control"></textarea>
                                </div>
                                <div class="col-12 mt-4">
                                    <label>Subscription Type</label>
                                    <select @bind="billing.SubscriptionType" class="form-control">
                                        <option value="monthly">Monthly - @course.Price.ToString("C")</option>
                                        <option value="yearly">Yearly - @(course.Price * 12).ToString("C")</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-sm-8">
                        <aside class="order-summery ms-xl-5">
                            <h3 class="sub-title">Summary</h3>
                            <div class="cart-totals mt-5 bg-shade p-4 rounded border">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td>Course:</td>
                                            <td>@course.Title</td>
                                        </tr>
                                        <tr>
                                            <td>Subscription:</td>
                                            <td>@billing.SubscriptionType</td>
                                        </tr>
                                        <tr>
                                            <td>Total:</td>
                                            <td><strong>@(billing.SubscriptionType == "monthly" ? course.Price.ToString("C") : (course.Price * 12).ToString("C"))</strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary d-block w-100">Place Your Order</button>
                                </div>
                            </div>
                        </aside>
                    </div>
                </div>
            </form>
        </div>
    </section>
   <!-- Checkout Section End -->

@code {
    [Parameter] public Guid Id { get; set; }

    private CourseModel? course;

    private BillingInfoModel billing = new();
    private List<string> countries = new()
    {
        "United States", "Mexico", "Australia", "Germany", "Sweden", "France",
        "Canada", "Ghana", "Nigeria", "Kenya", "India", "South Africa", "Brazil"
    };

    protected override async Task OnInitializedAsync()
    {
        course = await _service.GetCourseByIdAsync(Id);
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        billing.Email = user.Identity?.Name ?? string.Empty;
    }

    private async Task PlaceOrder()
    {
        // TODO: Call backend to place order
        Console.WriteLine($"Order Placed for: {course?.Title}, Type: {billing.SubscriptionType}");
        Nav.NavigateTo("/thank-you");
    }
}
